<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.paper.paperinteractive">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-feature android:name="android.hardware.camera" android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <provider
            android:authorities="com.example.paper.paperinteractive"
            android:name="android.support.v4.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MeetingActivity" />
        <activity android:name=".Child.ChildActivity" />
        <activity android:name=".Child.ChildListActivity" />
        <activity android:name=".Child.ChildListItemActivity" />
        <activity android:name=".ListViewLoader" />
        <activity android:name=".Library.LibraryActivity" />
        <activity android:name=".Library.LibraryDatabaseActivity" />
        <activity
            android:name=".Library.LibraryAddGroupActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".PdfActivity"/>
        <activity android:name=".Library.ExpandableListChild"/>
    </application>

</manifest>