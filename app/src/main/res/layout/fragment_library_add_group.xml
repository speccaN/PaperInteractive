<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.paper.paperinteractive.Fragments.LibraryAddGroupFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/l_gg_till"
            android:id="@+id/textLibraryGroup"
            android:textAlignment="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutGroupAddControls">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/textGroupName"
                android:layout_weight="1"
                android:hint="Gruppnamn" />

            <Button
                android:text="Lägg Till"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnAddGroup"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:text="Lägg till Övning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddChild" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_child_container">
        </FrameLayout>
    </LinearLayout>

</FrameLayout>
