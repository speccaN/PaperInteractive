<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_meeting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.paper.paperinteractive.MeetingActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_content"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="?android:attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:text="Namn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textChildName"
                android:textAlignment="center"
                android:textSize="25sp"/>

            <View style="@style/Divider"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Välj Barn:"
                    android:layout_width="match_parent"
                    android:id="@+id/textView2"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerChild"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:text="@string/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textChildAge"
                android:textSize="17sp"
                android:layout_marginTop="15dp"/>

            <View style="@style/Divider"
                android:layout_marginTop="15dp"/>

            <!--TODO Fixa så att RecyclerView tar upp hela skärmen när Fragment är borta-->
            <!--TODO Göra så att Fragmenten minskar RecyclerViewn-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:text="Övningar:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textLibrayChildren"
                    android:textAlignment="center"
                    android:textSize="25sp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:text="Inga övningar tilldelade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textEmptyList"
                        android:textAlignment="center" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view_group_children"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"/>

                    <Button
                        android:text="@string/l_gg_till"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnTempAdd" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/fragment_container"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:layout_weight="1">

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
